{
  "name": "dungeon-crawler",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "dev:api": "pnpm --filter @dungeon-crawler/api dev",
    "dev:ui": "pnpm --filter @dungeon-crawler/ui dev",
    "build": "pnpm --filter @dungeon-crawler/shared build && pnpm --filter @dungeon-crawler/api build && pnpm --filter @dungeon-crawler/ui build",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome check --write .",
    "verify": "npm run format && npm run typecheck && npm run lint",
    "typecheck": "pnpm -r typecheck"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=25"
  }
}
